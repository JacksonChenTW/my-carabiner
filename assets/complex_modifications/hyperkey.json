{
  "title": "HyperKey and Usages",
  "rules": [
    {
      "description": "Set caps_lock as hyper key to right command+control+option+shift.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_shift",
              "modifiers": ["right_command", "right_control", "right_option"]
            }
          ]
        }
      ]
    },
