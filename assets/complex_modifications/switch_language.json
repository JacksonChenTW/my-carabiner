{
  "title": "switch English, Chinese, Japanese",
  "rules": [
    {
      "description": "Use left_control+1/2/3/4 to switch language to English, Chinese, Japanese(Hirakana), Japanese(Katakana), respectively.",
      "manipulators": [
        {
          "from": {
            "key_code": "3",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "select_input_source": {
                "language": "en"
              }
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "2",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "select_input_source": {
                "language": "zh-Hant"
              }
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "1",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "select_input_source": {
                "input_mode_id": "com.apple.inputmethod.Japanese"
              }
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
